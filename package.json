{
  "name": "dual-publish",
  "version": "2.0.0",
  "description": "Publish project as dual ES modules and CommonJS package",
  "keywords": [
    "esm",
    "es modules",
    "dual package",
    "publish",
    "npm"
  ],
  "type": "module",
  "bin": "./bin.js",
  "engines": {
    "node": ">=12.16.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && yaspeller *.md"
  },
  "dependencies": {
    "clean-publish": "^3.4.1",
    "globby": "^11.0.2",
    "line-column": "^1.0.2",
    "picocolors": "^1.0.0",
    "rimraf": "^3.0.2"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/dual-publish",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@logux/eslint-config": "^46.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/node": "^16.10.5",
    "browserify": "^17.0.0",
    "esbuild": "^0.12.28",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "metro": "^0.59.0",
    "metro-react-native-babel-transformer": "^0.59.0",
    "nanoid": "^3.1.29",
    "parcel": "1.12.3",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git-hooks": "^2.6.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.4",
    "webpack": "^5.58.2",
    "yaspeller": "^7.2.0"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "jest/no-conditional-expect": "off",
      "node/global-require": "off"
    }
  },
  "eslintIgnore": [
    "test/fixtures/"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "test/fixtures/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "clean-publish": {
    "cleanDocs": true
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "JS",
      "ES",
      "CommonJS",
      "js",
      "bundlers",
      "webpack",
      "GitHub",
      "configs",
      "npm",
      "dirs",
      "ESM",
      "dir",
      "NanoEvents",
      "as ESM or",
      "subfolders",
      "16M",
      "or esbuild",
      "CDNs",
      "jspm",
      "stacktrace",
      "Rollup",
      "CI"
    ]
  }
}
